{
  "manifest_version": 2,
  "name": "fontreplacer",
  "version": "0.0.13",

  "description": "Replace any font with any font stack. Useful for Arial â†’ Helvetica.",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "permissions": [ "storage", "fontSettings", "tabs" ],

  "content_scripts": [{
      "matches": [ "<all_urls>" ],
      "js": [ "replace.js" ]
    }],
  "web_accessible_resources": [
    "defaults.json"
  ],

  "background": {
    "scripts": [ "eventPage.js" ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}
