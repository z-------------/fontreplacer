{
  "manifest_version": 2,
  "name": "fontreplacer",
  "version": "0.0.7",

  "description": "Replace any font with any font stack. Useful for Arial â†’ Helvetica.",

  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "permissions": [ "storage", "fontSettings" ],

  "content_scripts": [{
      "matches": [ "<all_urls>" ],
      "js": [ "replace.js" ]
    }],
  "web_accessible_resources": [
    "defaults.json"
  ],

  "background": {
    "scripts": [ "eventPage.js" ],
    "persistent": false
  }
}
