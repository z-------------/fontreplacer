{
  "manifest_version": 2,
  "name": "fontreplacer",
  "version": "0.0.8",

  "description": "Replace any font with any font stack. Useful for Arial â†’ Helvetica.",

  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "permissions": [ "storage", "fontSettings", "tabs" ],

  "content_scripts": [{
      "matches": [ "<all_urls>" ],
      "js": [ "replace.js" ]
    }],
  "web_accessible_resources": [
    "defaults.json"
  ],

  "background": {
    "scripts": [ "eventPage.js" ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}
